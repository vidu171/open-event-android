<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upcoming_dialog"
    android:layout_width="@dimen/medium_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/upcoming_Session_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/upcoming_title_height"
        android:layout_marginLeft="@dimen/upcoming_margin_left"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/upcoming_session_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_medium"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/track_image_drawable"
            android:layout_width="@dimen/item_image_view_small"
            android:layout_height="@dimen/item_image_view_small"
            android:layout_marginLeft="@dimen/layout_margin_medium"
            android:contentDescription="@string/item_track" />

        <TextView
            android:id="@+id/upcoming_session_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/upcoming_margin_left"
            android:layout_marginRight="@dimen/layout_margin_large"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_extra_large" />

    </LinearLayout>

    <Button
        android:id="@+id/upcoming_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/upcoming_height"
        android:layout_height="@dimen/upcoming_title_height"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/layout_margin_extra_small"
        android:text="OK"
        android:textColor="@color/color_primary" />

</LinearLayout>